<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_free"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Free text here"/>

        <EditText
            android:id="@+id/text_email"
            android:inputType="textWebEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email Here"/>
        <EditText
            android:id="@+id/text_numbers"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Numbers here"/>
        <EditText
            android:id="@+id/text_special"
            android:inputType=""
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Specials here"/>

        <EditText
            android:id="@+id/text_date"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Pick the date"/>

        <Spinner
            android:id="@+id/spinner_options"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Options here"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Validate"
            android:id="@+id/button_validate"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>